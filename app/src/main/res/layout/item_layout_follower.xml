<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mahmoud El Shar2wy"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/follower_name"
        android:layout_toEndOf="@+id/follower_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/follower_handle"
        android:layout_below="@+id/follower_name"
        android:text="\@userhandle"
        android:layout_toEndOf="@+id/follower_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/follower_bio"
        android:paddingTop="8dp"
        android:layout_below="@+id/follower_handle"
        android:text="userbio kkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"
        android:layout_toEndOf="@+id/follower_image"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/follower_image"
        android:paddingEnd="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>